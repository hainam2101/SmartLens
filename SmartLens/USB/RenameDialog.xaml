<ContentDialog
    x:Class="SmartLens.RenameDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SmartLens"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="重命名"
    CloseButtonText="取消"
    PrimaryButtonText="确定"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick" 
    Background="{ThemeResource SystemControlChromeHighAcrylicWindowMediumBrush}">

    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBox  Name="Text" TextChanging="Text_TextChanging" FontSize="18" Width="300"/>
            <TextBlock Text="预览" FontSize="22"/>
            <TextBlock Name="Preview" FontSize="18" Width="300" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</ContentDialog>
