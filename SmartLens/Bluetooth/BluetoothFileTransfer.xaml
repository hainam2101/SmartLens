<ContentDialog
    x:Class="SmartLens.BluetoothFileTransfer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SmartLens"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="正在初始化"
    SecondaryButtonText="中止"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick"
    Background="{StaticResource DialogAcrylicBrush}">

    <StackPanel Orientation="Vertical">
        <ProgressBar Name="ProgressControl" Height="20"/>
        <TextBlock HorizontalAlignment="Left" Name="ProgressText" Width="270" TextTrimming="CharacterEllipsis" TextWrapping="Wrap"/>
    </StackPanel>
</ContentDialog>
